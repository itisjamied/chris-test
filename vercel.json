{
  "builds": [
    {
      "src": "sanity-studio/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "sanity-studio/dist"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "sanity-studio/dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/admin/(.*)",
      "destination": "sanity-studio/dist/index.html"
    },
    {
      "source": "/static/(.*)",
      "destination": "/static/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ]
}
